<!--pages/camera/camera.wxml-->
<camera style="width: 100%; height: 600rpx;"></camera>
<button type="primary" size='mini' bindtap="takePhoto">拍照</button>
<button type="primary" size='mini' bindtap="startRecord">开始录像</button>
<button type="primary" size='mini' bindtap="stopRecord">结束录像</button>
<image mode="widthFix" src="{{src}}"></image>
<video src="{{videoSrc}}"  controls ></video>